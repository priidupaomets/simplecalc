<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="1" id="ee.tlu.hk.priidu.simplecalc" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Simple Calc</name>
    <description>
        A simple PhoneGap calculator app.
    </description>
    <author email="priidu@tlu.ee" href="https://hkdt.neolms.com">
        Priidu Paomets
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="android-targetSdkVersion" value="19" />
</widget>
